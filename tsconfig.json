{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "environment": ["./environment/environments.ts"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": ["tests/**/*", "pages/**/*", "environment/**/*", "utils/**/*", "data/**/*"],
  "exclude": ["node_modules", "dist"]
}